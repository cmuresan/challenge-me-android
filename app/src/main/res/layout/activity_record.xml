<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.cristianmmuresan.challengeme.ui.record.RecordActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        app:title="@string/record_activity"
        app:titleTextColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/timer_size"
        android:layout_below="@id/toolbar"/>

    <fragment android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:layout_below="@id/timer"
              android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <TextView
        android:id="@+id/stop_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_register"
        android:padding="@dimen/activity_half_vertical_margin"
        android:text="@string/stop_text"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
